//https://practice.geeksforgeeks.org/problems/shortest-path-from-1-to-n0156/1/?page=1&difficulty[]=-1&category[]=Graph&sortBy=submissions#

 int minimumStep(int n){
        //complete the function here
        int cn=0;
        while(n)
        {
            if(n%3==0) 
            {
                n=n/3;
            }
            else 
            {
                n=n-1;
            }
            cn++;
            
        }
        return cn-1;
    }
